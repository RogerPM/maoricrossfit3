<p id="notice"><%= notice %></p>

<h1>Listing Product Quantities</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Subtotal</th>
      <th>Sale</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_quantities.each do |product_quantity| %>
      <tr>
        <td><%= product_quantity.product %></td>
        <td><%= product_quantity.quantity %></td>
        <td><%= product_quantity.subtotal %></td>
        <td><%= product_quantity.sale %></td>
        <td><%= link_to 'Show', product_quantity %></td>
        <td><%= link_to 'Edit', edit_product_quantity_path(product_quantity) %></td>
        <td><%= link_to 'Destroy', product_quantity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

